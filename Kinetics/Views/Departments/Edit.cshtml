@model Kinetics.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<!-- Include shared header -->
@await Html.PartialAsync("_SharedTop")
    <h4>Edit Department</h4>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DepartmentID" />
                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label"></label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="mt-3">
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
<!-- Include shared bottom -->
@await Html.PartialAsync("_SharedBottom")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
