@model IEnumerable<Kinetics.Models.Department>

@{
    ViewData["Title"] = "Department";
}

<!-- Include shared header -->
@await Html.PartialAsync("_SharedTop")
    <h2>Departments</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Department</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>S/N</th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @{
            var i = 0;
        }
        @foreach (var item in Model) {
            i = i + 1;
            <tr>
                <td>@i</td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td class="vc-table-action">
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
<!-- Include shared bottom -->
@await Html.PartialAsync("_SharedBottom")