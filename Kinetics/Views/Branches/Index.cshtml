@model IEnumerable<Kinetics.Models.Branch>

@{
    ViewData["Title"] = "Branches";
}

<!-- Include shared header -->
@await Html.PartialAsync("_SharedTop")
    <h1>Branches</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Branch</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>S/N</th>
                <th>@Html.DisplayNameFor(model => model.BranchName)</th>
                <th>@Html.DisplayNameFor(Model => Model.BranchLocation)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{var i = 0;}
            @foreach (var item in Model)
            {
                i = i + 1;
                <tr>
                    <td>@i</td>
                    <td>@Html.DisplayFor(modelItem => item.BranchName)</td>
                    <td>@Html.DisplayFor(modelItem => item.BranchLocation)</td>
                    <td class="vc-table-action">
                        <a asp-action="Edit" asp-route-id="@item.BranchID" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.BranchID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<!-- Include shared bottom -->
@await Html.PartialAsync("_SharedBottom")
