@model Kinetics.Models.Salary

@{
    ViewData["Title"] = "Create";
}

<!-- Include shared header -->
@await Html.PartialAsync("_SharedTop")

<h4>Update Salary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GrossSalary" class="control-label"></label>
                <input asp-for="GrossSalary" class="form-control" />
                <span asp-validation-for="GrossSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveFrom" class="control-label"></label>
                <input asp-for="EffectiveFrom" class="form-control" />
                <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveTo" class="control-label"></label>
                <input asp-for="EffectiveTo" class="form-control" />
                <span asp-validation-for="EffectiveTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeID" class="control-label"></label>
                <select asp-for="EmployeeID" class ="form-control" asp-items="ViewBag.EmployeeID"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="mt-3">
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


<!-- Include shared bottom -->
@await Html.PartialAsync("_SharedBottom")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
